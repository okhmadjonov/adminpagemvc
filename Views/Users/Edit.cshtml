@model AdminPageMVC.Entities.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
    <style>
        /* Your CSS code here */
        .update-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
            justify-content: center;
            align-items: center;
            margin: 10px;
        }

        .input {
            width: 100%;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .btn-confirm {
            background-color: green; /* Adjust colors as needed */
            border: none;
            color: white;
            cursor: pointer;
            padding: 5px 10px;
            margin-right: 5px;
        }

        .btn-cancel {
            background-color: red; /* Adjust colors as needed */
            border: none;
            color: white;
            cursor: pointer;
            padding: 5px 10px;
            margin-right: 5px;
        }
    </style>
</head>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="update-form" method="post" action="@Url.Action("Edit", "Users")">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="text" name="newFullName" value="@Model.FullName" class="input" />
            <input type="text" name="newEmail" value="@Model.Email" class="input" />
            <input type="text" name="newPassword" value="@Model.Password" class="input" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
